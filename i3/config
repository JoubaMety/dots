#################################
#             Binds             #
#################################

set $mod Mod4
set $alt Mod1

font pango:Source Code Pro Semi-Bold 8

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec kitty

#screenshot
bindsym Print exec "flameshot gui"

#pcmanfm
bindsym $mod+e exec pcmanfm

#workspace go back thing
bindsym $mod+Escape workspace back_and_forth

# kill focused window
bindsym $mod+Shift+c kill

# browser
bindsym $mod+q exec chromium

# audio
bindsym $alt+Up exec "pamixer -i 5"
bindsym $alt+Down exec "pamixer -d 5"


# start rofi (a program launcher)
bindsym $mod+r exec --no-startup-id "sh ~/.config/i3/menu &"

#switch workspaces with arrow keys
bindsym $mod+Right workspace next
bindsym $mod+Left workspace prev

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+h split v

# split in vertical orientation
bindsym $mod+v split h

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# emoji picker
bindsym $mod+b exec "sh ~/Documents/emoji.sh &"

# play clipboard url with mpv
bindsym $mod+Shift+d exec "mpv $(xclip -o)"

# toggle tiling / floating
bindsym $mod+Control+space floating toggle

# scratchpad
bindsym $mod+Down move scratchpad
bindsym $mod+Up scratchpad show, floating disable

# neovim editor
bindsym $mod+d exec neovide

# toggle bar
bindsym $mod+n exec "polybar-msg cmd toggle"

#test
bindsym $mod+s layout stacking

# show status
# bindsym $mod+n exec "bash ~/.local/bin/status"

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+q exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# zoom to area
bindsym $mod+w exec boomer

#################################
#            Options            #
#################################

#border_radius 3
smart_borders on
#smart_gaps on
set $inner_gaps 10
set $outer_gaps 0
gaps inner $inner_gaps
gaps outer $outer_gaps
for_window [title="xzoom"] floating enable

client.focused #c6c6c6 #1f1f1f #c6c6c6 #E0E0E0 #E0E0E0  
client.focused_inactive #c6c6c6 #1f1f1f #c6c6c6 #53e2ae #E0E0E0 
client.unfocused #c6c6c6 #1f1f1f #c6c6c6 #E0E0E0  #E0E0E0  
client.urgent #c6c6c6 #1f1f1f #c6c6c6 #E0E0E0  #E0E0E0 
client.placeholder #c6c6c6 #1f1f1f #c6c6c6 #E0E0E0 #E0E0E0  
client.background #1f1f1f

for_window [class="^.*"] border pixel 0
new_window 1pixel

#################################
#            Startup            #
#################################

#exec --no-startup-id tint2
#exec_always "~/.local/bin/compix -c ~/.compix.conf"

exec_always --no-startup-id $HOME/.config/polybar/launch.sh
exec dunst &
exec nitrogen --restore
exec lxsession & 
exec pcmanfm -d
#exec "nemo -n"
exec_always picom

#exec_always "~/.local/bin/compix -c ~/.config/compix.conf"

